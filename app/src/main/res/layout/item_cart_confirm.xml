<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp">

    <ImageView
        android:id="@+id/image_item_cart"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_100"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="@font/sanfranciscodisplay_bold"
        android:text="ABCD"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_item_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name_item"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_toEndOf="@+id/image_item_cart"
        android:text="ABCD"
        app:layout_constraintStart_toEndOf="@+id/image_item_cart"
        app:layout_constraintTop_toBottomOf="@+id/text_name_item" />

    <TextView
        android:id="@+id/text_quantity_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/text_name_item"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/text_price_item"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        android:text="x 1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_price_item"
        app:layout_constraintStart_toEndOf="@+id/text_price_item" />
    <View
        android:background="@color/color_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>
</android.support.constraint.ConstraintLayout>