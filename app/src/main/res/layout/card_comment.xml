<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_30"
    android:layout_marginTop="@dimen/dimen_10"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/dimen_10"
            android:fontFamily="@font/sanfranciscodisplay_regular"
            android:text="Khách hàng nhận xét"
            android:textColor="@color/color_blue_grey_900"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_edit_black_24dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:text="4,5/5"
                android:textColor="@color/color_blue_grey_900"
                android:textSize="26sp" />

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10"
                android:rating="4.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/sanfranciscodisplay_regular"
                android:text="190 nhan xet" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_five"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_toEndOf="@+id/rating_five"
                    android:layout_toStartOf="@+id/text_five"
                    android:progress="72"
                    android:progressTint="#c7c7c7" />

                <TextView
                    android:id="@+id/text_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:fontFamily="@font/sanfranciscodisplay_regular"
                    android:text="@string/default_percent"
                    android:textColor="@color/color_blue_grey_900"
                    android:textSize="@dimen/dimen_10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_four"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="4" />

                <ProgressBar
                    android:id="@+id/progress_four"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_toEndOf="@+id/rating_four"
                    android:layout_toStartOf="@+id/text_four"
                    android:progress="24"
                    android:progressTint="#c7c7c7" />

                <TextView
                    android:id="@+id/text_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:fontFamily="@font/sanfranciscodisplay_regular"
                    android:text="@string/default_percent"
                    android:textColor="@color/color_blue_grey_900"
                    android:textSize="@dimen/dimen_10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_three"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3" />

                <ProgressBar
                    android:id="@+id/progress_three"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_toEndOf="@+id/rating_three"
                    android:layout_toStartOf="@+id/text_three"
                    android:progress="3"
                    android:progressTint="#c7c7c7" />

                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:fontFamily="@font/sanfranciscodisplay_regular"
                    android:text="@string/default_percent"
                    android:textColor="@color/color_blue_grey_900"
                    android:textSize="@dimen/dimen_10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_two"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="2" />

                <ProgressBar
                    android:id="@+id/progress_two"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_toEndOf="@+id/rating_two"
                    android:layout_toStartOf="@+id/text_two"
                    android:progress="1"
                    android:progressTint="#c7c7c7" />

                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:fontFamily="@font/sanfranciscodisplay_regular"
                    android:text="@string/default_percent"
                    android:textColor="@color/color_blue_grey_900"
                    android:textSize="@dimen/dimen_10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_one"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="5" />

                <ProgressBar
                    android:id="@+id/progress_one"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_toEndOf="@+id/rating_one"
                    android:layout_toStartOf="@+id/text_one"
                    android:progress="2"
                    android:progressTint="#c7c7c7" />

                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:fontFamily="@font/sanfranciscodisplay_regular"
                    android:text="@string/default_percent"
                    android:textColor="@color/color_blue_grey_900"
                    android:textSize="@dimen/dimen_10sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginEnd="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/custom_button2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:text="@string/comment"
            android:textAllCaps="true"
            android:textColor="#04b8f0"
            android:textSize="@dimen/dimen_text_14" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5" />

</LinearLayout>