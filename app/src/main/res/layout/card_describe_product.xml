<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="@dimen/dimen_10"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title_content"
        android:layout_margin="@dimen/dimen_5"
        android:fontFamily="@font/sanfranciscodisplay_medium" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_h2"
        android:layout_margin="@dimen/dimen_5"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <RelativeLayout
        android:id="@+id/relative_all_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:text="@string/see_all"
            android:textColor="@color/color_blue_700"
            android:textSize="@dimen/dimen_text_16" />
    </RelativeLayout>

</RelativeLayout>