<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_item_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5">

        <LinearLayout
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_155dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_extra_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_margin="@dimen/dimen_5"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_extra_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:ellipsize="end"
                android:fontFamily="@font/sanfranciscodisplay_regular"
                android:maxLines="2"
                android:textColor="@color/color_blue_grey_900" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
