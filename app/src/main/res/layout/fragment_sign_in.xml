<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30">

        <EditText
            android:textSize="@dimen/dimen_text_14"
            android:id="@+id/et_hoten"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:hint="@string/name" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30">

        <EditText
            android:textSize="@dimen/dimen_text_14"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:hint="@string/email" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30">

        <EditText
            android:inputType="textPassword"
            android:textSize="@dimen/dimen_text_14"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_30"
            android:hint="@string/password" />

    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20"
        android:orientation="horizontal"
        android:theme="@style/MyRadioButton">

        <RadioButton
            android:textSize="@dimen/dimen_text_14"
            android:id="@+id/radioButton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20"
            android:checked="false"
            android:text="@string/male"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:textSize="@dimen/dimen_text_14"
            android:id="@+id/radioButton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:theme="@style/MyRadioButton" />
    </RadioGroup>

    <Button
        android:id="@+id/button_sign_in"
        android:textSize="@dimen/dimen_text_14"
        android:fontFamily="@font/sanfranciscodisplay_semibold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/custom_button1"
        android:text="@string/sign_in"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/sanfranciscodisplay_regular"
            android:textSize="@dimen/dimen_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/khi_ng_k_l_b_n_ch_p_nh_n" />

        <TextView
            android:fontFamily="@font/sanfranciscodisplay_regular"
            android:textSize="@dimen/dimen_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_u_kho_n_s_d_ng"
            android:textColor="@color/color_blue_700" />
    </LinearLayout>

</LinearLayout>
