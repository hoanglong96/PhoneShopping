<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="@dimen/dimen_10"
    android:layout_margin="@dimen/dimen_15"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_item_cart"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_120dp" />

        <ImageView
            android:id="@+id/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen_5"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@drawable/ic_close"/>

        <TextView
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="@dimen/dimen_18sp"
            android:id="@+id/text_name_item"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:layout_toEndOf="@+id/image_item_cart"
            android:layout_toStartOf="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCD"/>

        <TextView
            android:layout_below="@+id/text_name_item"
            android:id="@+id/text_price_item"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_5"
            android:layout_toEndOf="@+id/image_item_cart"
            android:layout_toStartOf="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCD"/>

        <LinearLayout
            android:layout_below="@+id/text_price_item"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_toEndOf="@+id/image_item_cart"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_30">

            <RelativeLayout
                android:id="@+id/relative_minus"
                android:background="@drawable/custom_left"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_quantity"
                    android:textSize="@dimen/dimen_18sp"
                    android:fontFamily="@font/sanfranciscodisplay_semibold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_add"
                android:background="@drawable/custom_right"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>