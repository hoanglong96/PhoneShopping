<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_7">

    <ImageView
        android:id="@+id/ic_check"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"
        android:src="@drawable/ic_beenhere_black_24dp" />

    <TextView
        android:textSize="@dimen/dimen_text_14"
        app:layout_constraintBottom_toBottomOf="@+id/ic_check"
        app:layout_constraintTop_toTopOf="@+id/ic_check"
        android:id="@+id/text_item_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/ic_check" />

</android.support.constraint.ConstraintLayout>
